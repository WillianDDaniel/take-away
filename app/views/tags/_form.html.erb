<%= form_with(model: @tag, class: "flex flex-col items-center") do |f| %>
  <div class="flex flex-col w-7/12">
    <%= f.label :name, class: "font-semibold text-gray-700" %>
    <%= f.text_field :name, class: "border-gray-600 rounded-md shadow-sm w-full" %>
  </div>

  <div class="w-full flex justify-center mt-6 gap-4">
    <%= f.submit "#{@tag.persisted? ? 'Atualizar' : 'Cadastrar'}",
      class: "bg-green-600 hover:bg-green-500 text-white font-semibold py-2 px-6 rounded-lg shadow-md"
    %>

    <%= link_to "Cancelar", tags_path,
      class: "bg-gray-500 hover:bg-gray-400 text-white font-semibold py-2 px-6 rounded-lg shadow-md"
    %>
  </div>
<% end %>