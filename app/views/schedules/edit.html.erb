<section class="flex flex-col w-full">

  <h1 class="w-full text-center p-5">
    Editar hor√°rio
  </h1>

  <% if @schedule.errors.any? %>
    <ul>
      <% @schedule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @schedule, class: 'w-full') do |f| %>

  <div class="flex flex-col w-full items-center gap-5">
    <div class="flex items-center gap-2">
      <%= f.label :week_day, 'Dia da semana' %><br>
      <%= f.select :week_day, Schedule.day_options, prompt: 'Selecione o dia' %>
    </div>

    <div class="flex gap-5">
      <div>
        <%= f.label :open_time %><br>
        <%= f.time_field :open_time %><br>
      </div>

      <div>
        <%= f.label :close_time %><br>
        <%= f.time_field :close_time %><br>
      </div>
    </div>
  <div>

  <%= f.submit 'Salvar' %>

  <% end %>

</section>