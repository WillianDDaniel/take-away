<%= form_with(model: @schedule, class: 'w-10/12 mt-5') do |f| %>

  <div class="flex flex-wrap w-full justify-center items-center gap-7">

    <div class="flex flex-col items-center gap-1">
      <%= f.label :week_day %>
      <%= f.select :week_day, Schedule.day_options, prompt: 'Selecione o dia' %>
    </div>

    <div class="flex flex-col items-center gap-1">
      <%= f.label :open_time %>
      <%= f.time_field :open_time %>
    </div>

    <div class="flex flex-col items-center gap-1">
      <%= f.label :close_time %>
      <%= f.time_field :close_time %>
    </div>

    <div class="w-full flex justify-center mt-3 gap-5
    ">
      <%= f.submit 'Salvar',
        class: 'bg-green-700 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md'
      %>

      <%= link_to 'Cancelar', schedules_path,
        class: 'bg-red-700 hover:bg-red-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md'
      %>
    </div>

  <div>
<% end %>