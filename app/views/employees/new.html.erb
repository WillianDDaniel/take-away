<section class="p-6 w-11/12 mx-auto bg-white shadow-md rounded-lg flex flex-col items-center">
  <h1 class="w-full text-xl font-bold p-4 text-center">Novo Funcionário</h1>

  <% if @employee.errors.any? %>
    <ul>
      <% @employee.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @employee, class: "flex flex-col items-center gap-5") do |f| %>
    <div class="flex flex-col w-[300px]">
      <%= f.label :email %>
      <%= f.text_field :email, class: ' rounded-md' %>
    </div>

    <div class="flex flex-col w-[300px]" data-controller="cpf-mask">
      <%= f.label :doc_number %>
      <%= f.text_field :doc_number, data: {cpf_mask_target: "cpf"}, class: ' rounded-md' %>
    </div>

    <div>
      <%= f.hidden_field :restaurant_id, value: @restaurant.id %>
      <%= f.submit "Cadastrar Funcionário", class: "bg-green-700 hover:bg-green-600 text-white font-semibold py-2 px-8 rounded-lg shadow-md" %>
    </div>
  <% end %>
</section>