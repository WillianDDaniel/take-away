<section class="w-11/12 mx-auto">

  <h1 class=" w-full text-center text-3xl font-bold p-4">Funcion√°rios</h1>

  <% @employees.each do |employee| %>
    <div class="flex justify-between bg-gray-200 p-4 rounded gap-3">

      <div class="flex gap-5">
        <div class="flex flex-col">
          <b>E-mail: <br></b>
          <%= employee.email %>
        </div>

        <div class="flex flex-col">
          <b>CPF: <br></b>
          <%= employee.doc_number %>
        </div>
      </div>

      <div class="flex flex-col text-center">
        Cadastro no sistema: <br>
        <% if employee.registered %>
          <span class="text-green-500 font-semibold">Confirmado</span>
        <% else %>
          <span class="text-red-500 font-semibold">Pendente</span>
        <% end %>
      </div>

    </div>
  <% end %>
</section>