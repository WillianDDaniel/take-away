<h1 class="text-2xl font-semibold text-gray-800 mb-4">
  Novo Pedido para o Menu: <%= @menu.name %>
</h1>

<%= form_with model: @order, url: menu_orders_path(@menu), local: true,
  class: "space-y-4", data: { controller: "order" } do |f|
%>

  <%= render 'customer_fields', f: f %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

    <div>
      <h2 class="text-xl font-semibold text-gray-800 mb-2">
        Itens do Menu
      </h2>

      <div id="menu-items" class="space-y-4 p-4 border border-gray-300 rounded-lg overflow-auto h-80">
        <%= render 'menu_items', menu_items: @menu.dishes %>

        <%= render 'menu_items', menu_items: @menu.beverages %>
      </div>
    </div>

    <div>
      <h2 class="text-xl font-semibold text-gray-800 mb-2">
        Itens Selecionados
      </h2>

      <div id="order-items" data-order-target="orderItems"
        class="space-y-4 p-4 border border-gray-300
          rounded-lg h-80 overflow-auto bg-gray-50
        "
      >
      </div>
    </div>

  </div>

  <div class="mt-6">
    <%= f.submit "Finalizar Pedido",
      class: "w-full md:w-auto px-6 py-2 rounded-md bg-indigo-600 text-white
        font-semibold hover:bg-indigo-700"
      %>
  </div>
<% end %>