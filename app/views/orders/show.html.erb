<section class="flex p-6 w-[95%] mx-auto bg-white shadow-md rounded-lg">
  <div class="w-2/6 pr-6 border-r border-gray-200">
    <h1 class="text-2xl font-bold text-zinc-800 mb-4">Detalhes do Pedido #<%= @order.code %></h1>

    <div class="mb-4">
      <span class="inline-block px-3 py-1 rounded-full text-sm font-semibold
        bg-blue-100 text-blue-800">
        Status: <%= @order.status_i18n %>
      </span>
    </div>

    <div class="space-y-4">
      <div class="bg-gray-50 p-3 rounded">
        <span class="text-sm text-gray-600">Nome do Cliente:</span><br>
        <span class="text-zinc-800 font-medium"><%= @order.customer_name %></span>
      </div>

      <div class="bg-gray-50 p-3 rounded">
        <span class="text-sm text-gray-600">Telefone:</span><br>
        <span class="text-zinc-800 font-medium"><%= @order.customer_phone %></span>
      </div>

      <div class="bg-gray-50 p-3 rounded">
        <span class="text-sm text-gray-600">Email:</span><br>
        <span class="text-zinc-800 font-medium"><%= @order.customer_email %></span>
      </div>
    </div>
  </div>

  <div class="w-4/6 pl-6">
    <h2 class="text-xl font-bold text-zinc-800 mb-4">
      Items do Pedido
    </h2>

    <table class="w-full">
      <thead class="bg-gray-100">
        <tr>
          <th class="text-left py-2 px-3 text-sm font-semibold text-gray-700">Item</th>
          <th class="text-left py-2 px-3 text-sm font-semibold text-gray-700">Porção</th>
          <th class="text-left py-2 px-3 text-sm font-semibold text-gray-700">Quantidade</th>
          <th class="text-left py-2 px-3 text-sm font-semibold text-gray-700">Obs.</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">

        <% @order_items.each do |item| %>
          <tr class="hover:bg-gray-50">
            <td class="py-2 px-3 text-sm text-gray-800">
              <%= item.portion.portionable.name %>
            </td>

            <td class="py-2 px-3 text-sm text-gray-600">
              <%= item.portion.description %>
            </td>

            <td class="py-2 px-3 text-sm text-gray-800">
              <%= item.quantity %>
            </td>

            <td class="py-2 px-3 text-sm text-gray-600">
              <%= item.note %>
            </td>
          </tr>
        <% end %>

        <tr class="bg-gray-50 font-medium">
          <td colspan="3" class="py-3 px-3 text-right">
            Valor Total:
          </td>

          <td class="py-3 px-3 font-bold text-gray-800">
            <%= number_to_currency(@total_price / 100.0, precision: 2) %>
          </td>
        </tr>

      </tbody>
    </table>
  </div>
</section>